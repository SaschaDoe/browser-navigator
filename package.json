{
	"name": "browser-navigator-testbed",
	"private": true,
	"version": "0.0.1",
	"description": "Development and testing environment for the @cursor-ai/navigator package",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:lib && vite build",
		"build:lib": "cd cursor-ai-navigator && npm run build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "vitest run --reporter=verbose",
		"test:unit:watch": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"cursor:map": "npm run build:lib && node quick-test.mjs",
		"cursor:map:dev": "npm run build:lib && npm run dev & sleep 3 && npm run test:e2e && kill %1",
		"cursor:map:test": "npx playwright test e2e/auto-navigator.spec.ts --config=playwright.config.dev.ts",
		"install:all": "npm install && cd cursor-ai-navigator && npm install",
		"clean": "rm -rf dist .svelte-kit cursor-app-map node_modules/.vite cursor-ai-navigator/dist",
		"publish:navigator": "cd cursor-ai-navigator && npm run build && npm publish --access public",
		"publish:dry-run": "cd cursor-ai-navigator && npm run build && npm pack",
		"publish:check": "cd cursor-ai-navigator && npm run build && npm publish --dry-run --access public"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-netlify": "^5.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^24.0.3",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	}
}
